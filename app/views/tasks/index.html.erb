
<ol class="breadcrumb">
  <li><%= link_to "Lists", lists_path %></li>
  <li class="active"><%= @list.name %></li>
</ol>

<div class="row">
  <div class="page-header">
    <h1><%= @list.name %></h1>
  </div>
</div>

<div class="row">

  <div class="col-lg-12">
    <%= form_for [@list, @task], html: { class: 'form-horizontal' } do |form| %>
      <div class="form-group">
        <div class="col-sm-7">
          <%= form.text_field :description, class: 'form-control', placeholder: 'Add a Task' %>
        </div>
        <div class="col-sm-4">
          <%= form.submit class: 'btn btn-success' %>
        </div>
      </div>
    <% end %>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <td>Name</td>
        <td></td>
      </tr>
    </thead>
    <% @list.tasks.each do |task| %>
      <tr>
        <td><%= task.description %></td>
        <td>
          <%= link_to "Delete", list_task_path(@list, task), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default btn-xs' %>
        </td>
      </tr>
    <% end %>
  </table>
</div>

